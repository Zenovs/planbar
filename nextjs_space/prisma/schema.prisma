generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String    @unique
  password           String
  role               String    @default("member")
  emailVerified      Boolean   @default(false)  // E-Mail-Verifizierung
  verificationCode   String?                     // 6-stelliger Verifizierungscode
  verificationExpires DateTime?                  // Ablaufzeit des Codes
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  image              String?
  imagePublic        Boolean   @default(false)
  emailNotifications Boolean   @default(true)
  emailReportFrequency String? @default("none") // "none", "daily", "weekly"
  desktopNotifications Boolean @default(false)
  
  // Subscription / Bezahlung
  subscriptionType     String    @default("free")    // "free" oder "pay"
  trialStartDate       DateTime?                      // Beginn der 14-Tage Trial
  trialEndDate         DateTime?                      // Ende der Trial
  stripeCustomerId     String?                        // Stripe Customer ID
  stripeSubscriptionId String?                        // Stripe Subscription ID
  subscriptionStatus   String    @default("active")  // "active", "trialing", "expired", "canceled"
  dailyRate            Float     @default(0.15)      // CHF pro Monat pro User (Standard: 0.15 CHF)
  
  // Pensum / Arbeitszeit
  weeklyHours        Float     @default(42)    // Soll-Stunden pro Woche
  workloadPercent    Int       @default(100)   // Pensum in Prozent (z.B. 80% = 33.6h)
  
  // Design-Einstellungen
  designPrimaryColor   String?   @default("#3b82f6")
  designSecondaryColor String?   @default("#8b5cf6")
  designAccentColor    String?   @default("#ec4899")
  designBorderRadius   String?   @default("medium")
  designLayoutDensity  String?   @default("standard")
  designBackgroundImage String?
  designBackgroundPublic Boolean @default(false)

  accounts         Account[]
  sessions         Session[]
  createdTickets   Ticket[]  @relation("CreatedTickets")
  assignedTickets  Ticket[]  @relation("AssignedTickets")
  managedTickets   Ticket[]  @relation("ManagedTickets")
  assignedSubTasks SubTask[] @relation("AssignedSubTasks")
  ticketAssignees  TicketAssignee[]
  subTaskAssignees SubTaskAssignee[]
  teamId           String?
  team             Team?     @relation(fields: [teamId], references: [id])
  teamMemberships  TeamMember[]
  notes            Note[]
  absences         Absence[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3b82f6")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     User[]
  teamMembers TeamMember[]
  tickets     Ticket[]
  templates   Template[]

  @@map("teams")
}

model TeamMember {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Pensum für dieses Team
  weeklyHours     Float    @default(42)
  workloadPercent Int      @default(100)
  
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  teamId          String
  team            Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@map("team_members")
}

model Ticket {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("open")
  priority    String    @default("medium")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  createdById String
  createdBy   User   @relation("CreatedTickets", fields: [createdById], references: [id])

  assignedToId String?
  assignedTo   User?   @relation("AssignedTickets", fields: [assignedToId], references: [id])

  projectManagerId String?
  projectManager   User?   @relation("ManagedTickets", fields: [projectManagerId], references: [id])

  teamId String?
  team   Team?   @relation(fields: [teamId], references: [id])

  shareToken   String?   @unique
  shareEnabled Boolean   @default(false)
  
  estimatedHours Float?
  
  subTasks     SubTask[]
  assignees    TicketAssignee[]
  notes        Note[]
  milestones   Milestone[]

  @@map("tickets")
}

// Neue Models für Features

model SubTask {
  id             String   @id @default(cuid())
  title          String
  description    String?  @db.Text
  completed      Boolean  @default(false)
  status         String   @default("open") // open, in_progress, done
  position       Int      @default(0)
  dueDate        DateTime?
  estimatedHours Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  ticketId   String
  ticket     Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  assigneeId String?
  assignee   User?  @relation("AssignedSubTasks", fields: [assigneeId], references: [id], onDelete: SetNull)
  assignees  SubTaskAssignee[]

  @@map("sub_tasks")
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teamId String
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  subTickets TemplateSubTicket[]

  @@unique([name, teamId])
  @@map("templates")
}

model TemplateSubTicket {
  id          String @id @default(cuid())
  title       String
  description String?
  order       Int    @default(0)

  templateId String
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@map("template_sub_tickets")
}

model TicketAssignee {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([ticketId, userId])
  @@map("ticket_assignees")
}

model SubTaskAssignee {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  subTaskId String
  subTask   SubTask @relation(fields: [subTaskId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([subTaskId, userId])
  @@map("subtask_assignees")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String?
  noteDate  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ticketId String
  ticket   Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@map("notes")
}

// Meilensteine für Projekt-Timeline
model Milestone {
  id            String    @id @default(cuid())
  title         String
  description   String?
  dueDate       DateTime
  completed     Boolean   @default(false)
  position      Int       @default(0)
  color         String    @default("gray")  // "green", "red", "gray", "blue"
  responsibility String?  // z.B. "Kunde", "Fotograf", "Entwickler"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  ticketId      String
  ticket        Ticket    @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  // Abhängigkeiten
  dependsOnId   String?
  dependsOn     Milestone?  @relation("MilestoneDependency", fields: [dependsOnId], references: [id], onDelete: SetNull)
  dependents    Milestone[] @relation("MilestoneDependency")

  @@map("milestones")
}

// Abwesenheiten / Kalenderplanung
model Absence {
  id          String   @id @default(cuid())
  title       String
  type        String   // "vacation" | "workshop" | "sick" | "other"
  startDate   DateTime
  endDate     DateTime
  allDay      Boolean  @default(true)
  description String?
  color       String?  @default("#ef4444")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("absences")
}

// Ausgaben für Kosten-Dashboard
model Expense {
  id          String   @id @default(cuid())
  title       String
  amount      Float                          // Betrag in CHF
  type        String                         // "domain", "server", "software", "other"
  recurring   Boolean  @default(false)       // Wiederkehrende Kosten?
  interval    String?                        // "monthly", "yearly"
  startDate   DateTime @default(now())       // Ab wann
  endDate     DateTime?                      // Bis wann (null = laufend)
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("expenses")
}

// App-Einstellungen (z.B. Stripe-Konfiguration)
model AppSettings {
  id                      String   @id @default(cuid())
  stripeConfigured        Boolean  @default(false)
  stripePublishableKey    String?
  stripeWebhookConfigured Boolean  @default(false)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("app_settings")
}
