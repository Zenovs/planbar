generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  imagePublic   Boolean   @default(true) // whether image is publicly accessible
  password      String?
  role          String    @default("member") // member or admin
  emailNotifications Boolean @default(true) // enable/disable email notifications
  
  // Personal branding settings - Colors
  primaryColor    String   @default("#3b82f6") // Tailwind blue-500
  secondaryColor  String   @default("#8b5cf6") // Tailwind purple-500
  accentColor     String   @default("#ec4899") // Tailwind pink-500
  
  // Personal design settings - Advanced
  borderRadius    String   @default("medium") // small, medium, large, none
  backgroundImage String?  // S3 path to background image
  backgroundImagePublic Boolean @default(true)
  layout          String   @default("standard") // compact, standard, spacious
  designTemplate  String   @default("default") // default, modern, minimal, colorful, etc.
  
  // Team relationship
  teamId          String?  // User's team assignment
  team            Team?    @relation(fields: [teamId], references: [id], onDelete: SetNull)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  assignedTickets Ticket[] @relation("AssignedTickets")
  createdTickets  Ticket[] @relation("CreatedTickets")
  
  @@map("users")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3b82f6") // Team color for visual identification
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  members     User[]   // Team members
  tickets     Ticket[] // Tickets assigned to this team
  
  @@map("teams")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String?
  status      String   @default("open") // open, in_progress, done, closed
  priority    String   @default("medium") // low, medium, high, critical
  deadline    DateTime?
  
  createdById String
  createdBy   User     @relation("CreatedTickets", fields: [createdById], references: [id], onDelete: Cascade)
  
  assignedToId String?
  assignedTo   User?    @relation("AssignedTickets", fields: [assignedToId], references: [id], onDelete: SetNull)
  
  // Team assignment for ticket visibility control
  teamId       String?
  team         Team?    @relation(fields: [teamId], references: [id], onDelete: SetNull)
  
  // Category for color coding
  categoryId   String?
  category     Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  // Public share token for customer access
  shareToken   String?   @unique // unique token for public access
  shareEnabled Boolean   @default(false) // enable/disable public sharing
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  subTasks    SubTask[] // Checkpoints/Sub-tasks
  
  @@map("tickets")
}

model SubTask {
  id          String   @id @default(cuid())
  title       String
  completed   Boolean  @default(false)
  position    Int      @default(0) // for ordering
  
  ticketId    String
  ticket      Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("sub_tasks")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  color       String   @default("#3b82f6") // Category color
  description String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  tickets     Ticket[]
  templates   TicketTemplate[] // Templates can belong to categories
  
  @@map("categories")
}

model TicketTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // Template ticket data
  title       String
  content     String? // template description
  status      String   @default("open")
  priority    String   @default("medium")
  
  // Category assignment
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  // Predefined sub-tasks
  subTasks    TemplateSubTask[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("ticket_templates")
}

model TemplateSubTask {
  id          String   @id @default(cuid())
  title       String
  position    Int      @default(0)
  
  templateId  String
  template    TicketTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@map("template_sub_tasks")
}

model Settings {
  id              String   @id @default(cuid())
  companyName     String   @default("planbar")
  logo            String?  // S3 path to logo image
  logoPublic      Boolean  @default(true)
  primaryColor    String   @default("#3b82f6") // Tailwind blue-500
  secondaryColor  String   @default("#8b5cf6") // Tailwind purple-500
  accentColor     String   @default("#ec4899") // Tailwind pink-500
  smtpHost        String?  // SMTP server for email notifications
  smtpPort        Int?     @default(587)
  smtpUser        String?
  smtpPassword    String?
  smtpFrom        String?  // From email address
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@map("settings")
}
