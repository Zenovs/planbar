generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String    @unique
  password           String
  role               String    @default("member")
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  image              String?
  imagePublic        Boolean   @default(false)
  emailNotifications Boolean   @default(true)
  
  // Pensum / Arbeitszeit
  weeklyHours        Float     @default(42)    // Soll-Stunden pro Woche
  workloadPercent    Int       @default(100)   // Pensum in Prozent (z.B. 80% = 33.6h)
  
  // Design-Einstellungen
  designPrimaryColor   String?   @default("#3b82f6")
  designSecondaryColor String?   @default("#8b5cf6")
  designAccentColor    String?   @default("#ec4899")
  designBorderRadius   String?   @default("medium")
  designLayoutDensity  String?   @default("standard")
  designBackgroundImage String?
  designBackgroundPublic Boolean @default(false)

  accounts         Account[]
  sessions         Session[]
  createdTickets   Ticket[]  @relation("CreatedTickets")
  assignedTickets  Ticket[]  @relation("AssignedTickets")
  assignedSubTasks SubTask[] @relation("AssignedSubTasks")
  teamId           String?
  team             Team?     @relation(fields: [teamId], references: [id])

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Team {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String   @default("#3b82f6")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members   User[]
  tickets   Ticket[]
  templates Template[]

  @@map("teams")
}

model Ticket {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      String    @default("open")
  priority    String    @default("medium")
  deadline    DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  createdById String
  createdBy   User   @relation("CreatedTickets", fields: [createdById], references: [id])

  assignedToId String?
  assignedTo   User?   @relation("AssignedTickets", fields: [assignedToId], references: [id])

  teamId String?
  team   Team?   @relation(fields: [teamId], references: [id])

  // Neue Features
  categoryId   String?
  category     Category? @relation(fields: [categoryId], references: [id])
  
  shareToken   String?   @unique
  shareEnabled Boolean   @default(false)
  
  subTasks     SubTask[]

  @@map("tickets")
}

// Neue Models f√ºr Features

model SubTask {
  id             String   @id @default(cuid())
  title          String
  completed      Boolean  @default(false)
  position       Int      @default(0)
  dueDate        DateTime?
  estimatedHours Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  ticketId   String
  ticket     Ticket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  assigneeId String?
  assignee   User?  @relation("AssignedSubTasks", fields: [assigneeId], references: [id], onDelete: SetNull)

  @@map("sub_tasks")
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  color       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  tickets Ticket[]

  @@map("categories")
}

model Template {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  teamId String
  team   Team   @relation(fields: [teamId], references: [id], onDelete: Cascade)

  subTickets TemplateSubTicket[]

  @@unique([name, teamId])
  @@map("templates")
}

model TemplateSubTicket {
  id          String @id @default(cuid())
  title       String
  description String?
  order       Int    @default(0)

  templateId String
  template   Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@map("template_sub_tickets")
}
