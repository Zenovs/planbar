generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/planbar_mobile/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Organization {
  id          String               @id @default(cuid())
  name        String
  slug        String               @unique
  description String?
  logo        String?
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
  invites     OrgInvite[]
  teams       Team[]
  users       User[]
  members     OrganizationMember[]
  customers   Customer[]

  @@map("organizations")
}

// N:M Beziehung zwischen User und Organization
model OrganizationMember {
  id             String       @id @default(cuid())
  userId         String
  organizationId String
  orgRole        String       @default("member")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
  @@map("organization_members")
}

model OrgInvite {
  id             String       @id @default(cuid())
  email          String
  token          String       @unique
  role           String       @default("member")
  expiresAt      DateTime
  accepted       Boolean      @default(false)
  createdAt      DateTime     @default(now())
  organizationId String
  invitedById    String?
  invitedBy      User?        @relation("InvitedUsers", fields: [invitedById], references: [id])
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([email, organizationId])
  @@map("org_invites")
}

model User {
  id                     String            @id @default(cuid())
  name                   String?
  email                  String            @unique
  password               String
  role                   String            @default("member")
  orgRole                String            @default("member")
  emailVerified          Boolean           @default(false)
  verificationCode       String?
  verificationExpires    DateTime?
  createdAt              DateTime          @default(now())
  updatedAt              DateTime          @updatedAt
  image                  String?
  imagePublic            Boolean           @default(false)
  emailNotifications     Boolean           @default(true)
  emailReportFrequency   String?           @default("none")
  desktopNotifications   Boolean           @default(false)
  organizationId         String?
  subscriptionType       String            @default("free")
  trialStartDate         DateTime?
  trialEndDate           DateTime?
  stripeCustomerId       String?
  stripeSubscriptionId   String?
  subscriptionStatus     String            @default("active")
  dailyRate              Float             @default(0.15)
  weeklyHours            Float             @default(42)
  workloadPercent        Int               @default(100)
  designPrimaryColor     String?           @default("#3b82f6")
  designSecondaryColor   String?           @default("#8b5cf6")
  designAccentColor      String?           @default("#ec4899")
  designBorderRadius     String?           @default("medium")
  designLayoutDensity    String?           @default("standard")
  designBackgroundImage  String?
  designBackgroundPublic Boolean           @default(false)
  teamId                 String?
  absences               Absence[]
  accounts               Account[]
  mocoIntegration        MocoIntegration?
  notes                  Note[]
  sentInvites            OrgInvite[]       @relation("InvitedUsers")
  sessions               Session[]
  assignedSubTasks       SubTask[]         @relation("AssignedSubTasks")
  subTaskAssignees       SubTaskAssignee[]
  teamMemberships        TeamMember[]
  ticketAssignees        TicketAssignee[]
  assignedTickets        Ticket[]          @relation("AssignedTickets")
  createdTickets         Ticket[]          @relation("CreatedTickets")
  managedTickets         Ticket[]          @relation("ManagedTickets")
  organization           Organization?     @relation(fields: [organizationId], references: [id])
  team                   Team?             @relation(fields: [teamId], references: [id])
  organizationMemberships OrganizationMember[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Team {
  id               String            @id @default(cuid())
  name             String
  description      String?
  color            String            @default("#3b82f6")
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  organizationId   String?
  teamMembers      TeamMember[]
  organization     Organization?     @relation(fields: [organizationId], references: [id])
  templates        Template[]
  tickets          Ticket[]
  members          User[]
  customerProjects CustomerProject[]

  @@map("teams")
}

model TeamMember {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  weeklyHours     Float    @default(42)
  workloadPercent Int      @default(100)
  userId          String
  teamId          String
  team            Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, teamId])
  @@map("team_members")
}

model Ticket {
  id               String           @id @default(cuid())
  title            String
  description      String?
  status           String           @default("open")
  priority         String           @default("medium")
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  createdById      String
  assignedToId     String?
  projectManagerId String?
  teamId           String?
  shareToken       String?          @unique
  shareEnabled     Boolean          @default(false)
  estimatedHours   Float?
  mocoProjectId    String?          // MOCO Projekt-ID f√ºr Integration
  milestones       Milestone[]
  notes            Note[]
  subTasks         SubTask[]
  assignees        TicketAssignee[]
  assignedTo       User?            @relation("AssignedTickets", fields: [assignedToId], references: [id])
  createdBy        User             @relation("CreatedTickets", fields: [createdById], references: [id])
  projectManager   User?            @relation("ManagedTickets", fields: [projectManagerId], references: [id])
  team             Team?            @relation(fields: [teamId], references: [id])
  customerProject  CustomerProject?

  @@map("tickets")
}

model SubTask {
  id             String            @id @default(cuid())
  title          String
  description    String?
  completed      Boolean           @default(false)
  status         String            @default("open")
  position       Int               @default(0)
  dueDate        DateTime?
  estimatedHours Float?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  ticketId       String
  assigneeId     String?
  assignee       User?             @relation("AssignedSubTasks", fields: [assigneeId], references: [id])
  ticket         Ticket            @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  assignees      SubTaskAssignee[]

  @@map("sub_tasks")
}

model Template {
  id          String              @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  teamId      String
  subTickets  TemplateSubTicket[]
  team        Team                @relation(fields: [teamId], references: [id], onDelete: Cascade)

  @@unique([name, teamId])
  @@map("templates")
}

model TemplateSubTicket {
  id          String   @id @default(cuid())
  title       String
  description String?
  order       Int      @default(0)
  templateId  String
  template    Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@map("template_sub_tickets")
}

model TicketAssignee {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  ticketId  String
  userId    String
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([ticketId, userId])
  @@map("ticket_assignees")
}

model SubTaskAssignee {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  subTaskId String
  userId    String
  subTask   SubTask  @relation(fields: [subTaskId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([subTaskId, userId])
  @@map("subtask_assignees")
}

model Note {
  id        String   @id @default(cuid())
  title     String
  content   String?
  noteDate  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ticketId  String
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@map("notes")
}

model Milestone {
  id             String      @id @default(cuid())
  title          String
  description    String?
  dueDate        DateTime
  completed      Boolean     @default(false)
  position       Int         @default(0)
  color          String      @default("gray")
  responsibility String?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  ticketId       String
  dependsOnId    String?
  dependsOn      Milestone?  @relation("MilestoneDependency", fields: [dependsOnId], references: [id])
  dependents     Milestone[] @relation("MilestoneDependency")
  ticket         Ticket      @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@map("milestones")
}

model Absence {
  id          String   @id @default(cuid())
  title       String
  type        String
  startDate   DateTime
  endDate     DateTime
  allDay      Boolean  @default(true)
  description String?
  color       String?  @default("#ef4444")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("absences")
}

model Expense {
  id        String    @id @default(cuid())
  title     String
  amount    Float
  type      String
  recurring Boolean   @default(false)
  interval  String?
  startDate DateTime  @default(now())
  endDate   DateTime?
  notes     String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("expenses")
}

model AppSettings {
  id                      String   @id @default(cuid())
  stripeConfigured        Boolean  @default(false)
  stripePublishableKey    String?
  stripeWebhookConfigured Boolean  @default(false)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@map("app_settings")
}

model MocoIntegration {
  id              String              @id @default(cuid())
  apiKeyEncrypted String
  apiKeyIv        String
  instanceDomain  String
  lastSyncAt      DateTime?
  lastSyncStatus  String?
  lastSyncError   String?
  isActive        Boolean             @default(true)
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  userId          String              @unique
  mocoEmail       String?
  calendarEntries MocoCalendarEntry[]
  user            User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("moco_integrations")
}

model MocoCalendarEntry {
  id            String          @id @default(cuid())
  mocoId        String
  date          DateTime
  hours         Float
  description   String?
  projectName   String?
  taskName      String?
  billable      Boolean         @default(false)
  syncedAt      DateTime        @default(now())
  integrationId String
  integration   MocoIntegration @relation(fields: [integrationId], references: [id], onDelete: Cascade)

  @@unique([mocoId, integrationId])
  @@map("moco_calendar_entries")
}

// Kunden-Management
model Customer {
  id             String            @id @default(cuid())
  name           String
  email          String?
  phone          String?
  address        String?
  description    String?
  contactPerson  String?
  color          String            @default("#3b82f6")
  isActive       Boolean           @default(true)
  shareToken     String?           @unique
  shareEnabled   Boolean           @default(false)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  organizationId String
  organization   Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  levels         CustomerLevel[]
  projects       CustomerProject[]

  @@map("customers")
}

model CustomerLevel {
  id          String            @id @default(cuid())
  name        String
  description String?
  position    Int               @default(0)
  color       String            @default("#6366f1")
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  customerId  String
  customer    Customer          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  projects    CustomerProject[]

  @@map("customer_levels")
}

model CustomerProject {
  id            String               @id @default(cuid())
  name          String
  description   String?
  status        String               @default("planned")
  startDate     DateTime?
  endDate       DateTime?
  isExternal    Boolean              @default(false)
  position      Int                  @default(0)
  color         String               @default("#10b981")
  mocoId        String?
  plannedHours  Float?
  createdAt     DateTime             @default(now())
  updatedAt     DateTime             @updatedAt
  customerId    String
  levelId       String?
  teamId        String?
  ticketId      String?              @unique
  dependsOnId   String?
  customer      Customer             @relation(fields: [customerId], references: [id], onDelete: Cascade)
  level         CustomerLevel?       @relation(fields: [levelId], references: [id], onDelete: SetNull)
  team          Team?                @relation(fields: [teamId], references: [id])
  ticket        Ticket?              @relation(fields: [ticketId], references: [id])
  dependsOn     CustomerProject?     @relation("ProjectDependency", fields: [dependsOnId], references: [id])
  dependents    CustomerProject[]    @relation("ProjectDependency")

  @@map("customer_projects")
}
